{
  "manifest_version": 3,
  "name": "Indeed Date Revealer",
  "version": "1.0",
  "description": "Displays the posting date on Indeed job listings.",
  "permissions": [],
  "host_permissions": ["https://www.indeed.com/viewjob*"],
  "content_scripts": [
    {
      "matches": ["https://www.indeed.com/viewjob*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/favicon-16x16.png",
    "48": "icons/favicon-32x32.png",
    "128": "icons/android-chrome-192x192.png"
  }
}
